<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="ruan.finalproject.carAnimator">


    <TextView
        android:id="@+id/lbRadius"
        android:layout_width="130dp"
        android:layout_height="30dp"
        android:text="Enter Size of Wheel Here"
        android:layout_alignBottom="@+id/tfRadious"
        android:layout_alignParentStart="true"
        android:layout_toStartOf="@+id/tfRadious" />
    <EditText
        android:id="@+id/tfRadious"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="89dp"
        android:ems="5"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/btnDraw" />

    <Button
        android:id="@+id/btnDraw"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create"
        android:layout_alignTop="@+id/tfRadious"
        android:layout_alignEnd="@+id/img2Circle"
        android:layout_marginEnd="10dp" />

    <ImageView
        android:id="@+id/imgCircle"
        android:text="Create"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_alignTop="@+id/img2Circle"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/img2Circle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        app:srcCompat="@mipmap/ic_launcher"
        android:layout_marginTop="159dp"
        android:layout_marginEnd="20dp"
        android:layout_below="@+id/btnDraw"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
